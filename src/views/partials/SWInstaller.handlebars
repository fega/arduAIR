{{!-- service worker Installer, useful to add Offline Capabilities--}}
<script>

	if ('serviceWorker' in navigator) {
  navigator.serviceWorker.register('/sw.js').then(function(registration) {
    // Registration was successful
    document.getElementById("sw-status").innerHTML = 'ServiceWorker registration successful with scope: ' + registration.scope;
  }).catch(function(err) {
    // registration failed :(
    document.getElementById("sw-status").innerHTML = 'ServiceWorker registration failed: ' + err;
  });
}
</script>